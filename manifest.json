{
  "display_information": {
    "name": "Holiday Bot",
    "description": "A bot that notifies about upcoming holidays",
    "background_color": "#2C2D30"
  },
  "features": {
    "bot_user": {
      "display_name": "Holiday Bot",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "chat:write.public",
        "commands",
        "app_mentions:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://slack-holiday-reminder-4a2fm3zis-marcos-projects-5746297d.vercel.app:3000/slack/events",
      "bot_events": [
        "app_mention"
      ]
    },
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://slack-holiday-reminder-4a2fm3zis-marcos-projects-5746297d.vercel.app:3000/slack/events"
    },
    "org_deploy_enabled": true,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false,
    "function_runtime" : "slack"
  },
  "functions": {
    "check_upcoming_holidays": {
      "title": "Check for upcoming holidays",
      "description": "Checks for upcoming holidays and sends notifications",
      "input_parameters": {
        "days_ahead": {
          "title": "Days ahead",
          "description": "Number of days ahead to check for holidays",
          "type": "integer",
          "default": 0,
          "is_required": false
        },
        "country_list": {
          "title": "Country code",
          "description": "ISO country code (e.g., US, GB, CA)",
          "type": "string",
          "default": "Italy, Spain, Ireland, USA, Canada",
          "is_required": false
        }
      },
      "output_parameters": {
        "holidays_found": {
          "title": "Holidays found",
          "description": "Number of holidays found in the period",
          "type": "integer"
        }
      }
    }
  },
  "workflows": {
    "daily_holiday_check": {
      "title": "Daily holiday check",
      "description": "A scheduled workflow to check for holidays daily",
      "suggested_triggers": [
        {
          "type": "scheduled",
          "inputs": {
            "days_ahead": {
              "value": 7
            },
            "country_list": {
              "value": "Italy, Spain, Ireland, USA, Canada"
            }
          }
        }
      ],
      "input_parameters": {
        "days_ahead": {
          "type": "integer",
          "default": 0
        },
        "country_list": {
          "type": "string",
          "default": "Italy, Spain, Ireland, USA, Canada"
        }
      },
      "steps": [
        {
          "id": "check_holidays_step",
          "function_id": "check_upcoming_holidays",
          "inputs": {
            "days_ahead": "{{inputs.days_ahead}}",
            "country_list": "{{inputs.country_list}}"
          }
        }
      ]
    }
  }
}
